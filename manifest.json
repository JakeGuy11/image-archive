{

  "manifest_version": 2,
  "name": "image-archive",
  "version": "0.1",

  "description": "Download images with accurate metadata and information",

  "icons": {
    "198": "icons/icon.png"
  },

  "permissions": [
    "<all_urls>",
    "activeTab",
    "downloads",
    "downloads.open"
  ],

  "content_scripts": [
    {
      "matches": ["*://www.reddit.com/*"],
      "js": ["parse.js"]
    }
  ],

  "background": {
    "scripts": ["download.js"]
  },


  "web_accessible_resources": [
    "icons/icon.png"
  ]

}