{

  "manifest_version": 2,
  "name": "Image Sourcerer",
  "version": "0.1",

  "description": "Download, organize and track images from supported sites",

  "icons": {
    "512": "icons/icon-512.png"
  },

  "permissions": [
    "<all_urls>",
    "activeTab",
    "downloads",
    "downloads.open"
  ],

  "browser_action": {
    "default_icon": "icons/icon-512.png",
    "default_title": "Image Sourcerer",
    "default_popup": "popup-res/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://www.reddit.com/*"],
      "js": ["page-scripts/reddit.js"]
    }
  ],

  "background": {
    "scripts": ["util-scripts/download.js"]
  },


  "web_accessible_resources": [
    "icons/download.png"
  ]

}

